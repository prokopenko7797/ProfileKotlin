<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProfileKot" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#2279d0</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/Button</item>
    </style>

    <style name="Theme.ProfileKot.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProfileKot.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ProfileKot.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/orange</item>
    </style>
    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_width">90dp</item>
        <item name="fabCustomSize">90dp</item>
        <item name="borderWidth">8dp</item>
        <item name="backgroundTint">@color/darkGray</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="tint">@color/white</item>
    </style>
</resources>